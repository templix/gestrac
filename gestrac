                    2)
                        clear
                        git status
                        read
                        clear
                        ;;
                    3)
                        clear
                        git pull
                        read
                        clear
                        ;;
                    4)
                        clear
                        git config -l
                        read
                        clear
                        ;;
                    5)
                        clear
                        cat .gitignore
                        read
                        clear
                        ;;
                    6)
                        clear
                        unset OPC1
                        #exit
                        ;;
                esac
            done
            ;;
        0)
            ### Sortir
            clear
            exit
            ;;
    esac
done
echo
echo  "=============================================================="
fcolor "<< La base de dades del tractatus compta amb  $NUM2 entradas >>"
echo "=============================================================="
echo
exit 0
