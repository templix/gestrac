            cat $HOME/TRAC/tractatus.txt | sed -e '1,2d' | sed -e 's/^[#]/>\\#/' -e 's/^[$]/>$/' -e 's/^[<]/\t\</' > $HOME/TRAC/tractatus.md
            cat $HOME/TRAC/tractatus.md | tr -d '\r' > $HOME/TRAC/file1.md
